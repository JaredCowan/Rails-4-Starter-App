<ul class="nav pull-right">
  <% if main_app_root_path = (main_app.root_path rescue false) %>
    <li>
      <%= link_to t('admin.home.name'), main_app_root_path %>
    </li>
  <% end %>
  <li>
    <%= link_to 'Sidekiq', main_app.sidekiq_path %>
  </li>
  <% if _current_user %>
    <% if logout_path.present? %>
      <li>
        <%= link_to content_tag('span', t('admin.misc.log_out'), :class => 'label label-important'), logout_path, :method => Devise.sign_out_via %>
      </li>
    <% end %>
    <li>
      <%= edit_user_link do %>
        <% image_tag _current_user.image_url(size: :tiny, ssl: request.ssl?) %>
      <% end %>
    </li>
  <% end %>
</ul>
